                                    <td><input type="text" class="form-control" style="text-transform:uppercase; font-size:11px; width:80px;" id="PddUnidad2" maxlength="8" placeholder=""></td>
                                    <td><input type="text" class="form-control" style="text-transform:uppercase; font-size:11px; width:80px;" id="PddActual2" maxlength="8" placeholder=""></td>
